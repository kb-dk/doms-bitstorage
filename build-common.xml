<project name="common">

    <property name="jarfile" value="${ant.project.name}.jar"/>
    <property name="srcpack.zip" value="${ant.project.name}-src.zip"/> 

    <import file="build-dependencies.xml"/>

    <target name="compile" depends="depends"
            description="Compile all production classes, and copy properties to class dir">

        <mkdir dir="classes"/>

        <javac source="1.6" destdir="classes" debug="on"
               encoding="UTF-8">
            <src path="src"/>
            <classpath refid="build.classpath"/>
        </javac>
        <copy todir="classes">
            <fileset dir="src">
                <include name="**/*.xml"/>
            </fileset>
        </copy>
    </target>


    <target name="clean">
        <delete dir="classes"/>
        <delete dir="tempsrc"/>
    </target>

    <target name="distclean" depends="clean">
        <delete dir="dist"/>

    </target>

    <target name="jar" depends="compile">
        <mkdir dir="dist"/>

        <jar destfile="dist/${jarfile}"
             basedir="classes"/>

    </target>

    <target  name="dist" depends="jar">
        <mkdir dir="dist"/>
        <copy todir="dist" flatten="true">
            <fileset refid="module.libs"/>
            <fileset refid="project.libs"/>
            <fileset refid="module.dependencies"/>
        </copy>
    </target>

    <target name="sourcezip">
        <mkdir dir="dist"/>

        <zip destfile="dist/${srcpack.zip}">
            <zipfileset dir="src">
                <include name="**/*.java"/>
            </zipfileset>
        </zip>
    </target>

    <target name="addtolib"
            depends="dist,sourcezip" >
        <copy file="dist/${jarfile}" todir="lib/${ant.project.name}/jars"
              overwrite="true"/>
        <copy file="dist/${srcpack.zip}" todir="lib/${ant.project.name}/src"
              overwrite="true"/>
    </target>


</project>